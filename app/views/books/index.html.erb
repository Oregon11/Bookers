<h2>Books</h2>
<div class="book-box">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book.id) %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
          <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => 'are you sure?' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>

<h3>New Book</h3>
<% if @book.errors.any? %>
  <p class="error"><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<p>タイトル</p>
<%= f.text_field :title %>
<p>本文</p>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
