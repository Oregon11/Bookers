<h2>Editing Book</h2>
  <% if @book.errors.any? %>
    <p class="error"><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for(@book) do |f| %>
    <p>タイトル</p>
    <%= f.text_field :title %>
    <p>本文</p>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
  <% end %>
  <%= link_to 'Show', book_path(@book.id) %>
  |
  <%= link_to 'Back', books_path %>
